create table seguro(
    id int AUTO_INCREMENT,
    nombre varchar(50),
    creado datetime,
    modificado datetime,
    usuario int,
    PRIMARY key(id)
) 
create table hospital(
    id int AUTO_INCREMENT,
    red varchar(50) not null,
    nombre varchar(100) NOT null,
    telefono varchar(20) NOT null,
    direccion varchar(60) NOT NULL,
    correo text NOT NULL,
    creado datetime,
    modificado datetime,
    usuario int,
    sello text not null, 
    PRIMARY key(id)
) 
